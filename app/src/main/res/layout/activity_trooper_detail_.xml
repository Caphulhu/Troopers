<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.troopersapp.Trooper_Detail_Activity">

     <TextView
         android:id="@+id/textView_detail_trooper"
         android:layout_weight="1"
         android:padding="15dp"
         android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Morbi gravida libero nec velit. Morbi scelerisque luctus velit. Etiam dui sem, fermentum vitae, sagittis id, malesuada in, quam. Proin mattis lacinia justo. Vestibulum facilisis auctor urna. Aliquam in lorem sit amet leo accumsan"
         android:layout_width="match_parent"
         android:layout_height="match_parent" />


    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:padding="12dp"
            android:id="@+id/imageView_detail_fullImage"
            android:src="@drawable/galactic_republic"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="12dp"
            android:id="@+id/imageView_detail_iconAffiliation"
            android:src="@drawable/galactic_republic"
            android:layout_below="@id/imageView_detail_fullImage"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
